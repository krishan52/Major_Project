<% layout("/layouts/boilerplate.ejs")%> 
<body>
  <h2>All Listings</h2>
  <!-- <form action="/listings/new" method="GET">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
      <% for(listing of allListings) {%>
        <a href="/listings/<%= listing._id%>" class="listing-link">
        <div class="card cols listing-card">
          <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem" />
          <div class="card-img-overlay">hello</div>
          <div class="card-body">
            <p class="card-text"><b><%= listing.title %></b> <br />&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</p>
          </div>
        </div>
      </a>
        <% } %>
    </div>
</body>
